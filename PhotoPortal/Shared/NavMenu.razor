@using PhotoPortal.Authentication
@inject AuthenticationStateProvider authState
@inject NavigationManager navManager

<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudText Typo="Typo.h5" Color="Color.Primary" Class="mt-3">PhotoPortal</MudText>
    </MudDrawerHeader>
    <MudNavMenu Bordered="true">
        <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
        <MudNavLink Href="/gear">Gear</MudNavLink>
        <MudNavLink Href="/workshops">Workshops</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
}